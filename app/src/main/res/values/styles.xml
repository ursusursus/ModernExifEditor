<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyStyle" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/action_item_selector</item>
        <item name="android:actionBarStyle">@style/ActionBar.MyStyle</item>
        <item name="android:windowBackground">@color/blue</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="ActionBar.MyStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/actionbar_color</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle.MyStyle</item>
        <item name="android:displayOptions">showTitle</item>
    </style>

    <style name="ActionBarTitleTextStyle.MyStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-condensed</item>
        <item name="android:textColor">@color/actionbar_title_color</item>
    </style>

    <style name="Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#77FFFFFF</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/edittext_selector</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <!--<item name="android:layout_marginLeft">16dp</item>-->
        <!--<item name="android:layout_marginRight">16dp</item>-->
        <item name="android:background">#15FFFFFF</item>
    </style>

</resources>
